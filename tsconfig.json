{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "ESNext",

    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "src"
  ]
}
